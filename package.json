{
  "name": "forsyth-barr-workspace",
  "version": "1.0.0",
  "description": "Forsyth Barr UI Components Workspace",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "preinstall": "node scripts/check-node-version.js",
    "build": "npm run build --workspaces",
    "dev": "npm run dev --workspaces",
    "test": "npm run test --workspace=packages/shared-components -- --passWithNoTests",
    "lint": "npm run lint --workspaces",
    "lint:fix": "npm run lint:fix --workspaces",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "task-management": "npm run dev --workspace=packages/task-management",
    "another-project": "npm run dev --workspace=packages/another-project-example",
    "build:shared": "npm run build --workspace=packages/shared-components",
    "build:task-management": "npm run build --workspace=packages/task-management",
    "build:another-project": "npm run build --workspace=packages/another-project-example",
    "start:all": "node tools/scripts/start-all.js",
    "api:server": "npm run server --workspace=packages/task-management",
    "check-node": "node scripts/check-node-version.js",
    "deploy:task-management": "npm run build:task-management && npx gh-pages --dist packages/task-management/dist --dest task-management --no-history",
    "deploy:storybook": "npm run build:shared && npm run build-storybook --workspace=packages/shared-components && npx gh-pages --dist packages/shared-components/storybook-static --dest storybook --no-history",
    "deploy:all": "npm run deploy:task-management && npm run deploy:storybook",
    "build-storybook": "npm run build-storybook --workspace=packages/shared-components",
    "storybook": "npm run storybook --workspace=packages/shared-components",
    "ci": "npm run lint && npm run test && npm run build:shared && npm run build:task-management"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "gh-pages": "^6.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.6.2",
    "semver": "^7.7.2",
    "ts-jest": "^29.4.1",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@forsyth-barr/ui-components": "^1.0.0"
  }
}
